<%- model_class = Dataelement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:originalname) %>:</strong></dt>
  <dd><%= @dataelement.originalname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:devname) %>:</strong></dt>
  <dd><%= @dataelement.devname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:datatype) %>:</strong></dt>
  <dd><%= @dataelement.datatype %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @dataelement.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:devtable) %>:</strong></dt>
  <dd><%= @dataelement.devtable %></dd>
  <dt><strong><%= model_class.human_attribute_name(:analysistype) %>:</strong></dt>
  <dd><%= @dataelement.analysistype %></dd>
  <dt><strong><%= model_class.human_attribute_name(:format) %>:</strong></dt>
  <dd><%= @dataelement.format %></dd>
  <dt><strong><%= model_class.human_attribute_name(:in_house_formula) %>:</strong></dt>
  <dd><%= @dataelement.in_house_formula %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recode) %>:</strong></dt>
  <dd><%= @dataelement.recode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comments) %>:</strong></dt>
  <dd><%= @dataelement.comments %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              dataelements_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_dataelement_path(@dataelement), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              dataelement_path(@dataelement),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<h3>Profile Page </h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tab) %></th>
      <th><%= model_class.human_attribute_name(:vertical) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @profilepages.each do |profilepage| %>
      <tr>
        <td><%= link_to profilepage.id, profilepage_path(profilepage) %></td>
        <td><%= link_to profilepage.tab, profilepage %></td>
        <td><%= profilepage.vertical %></td>
        <td><%= profilepage.url %></td>
        <td><%= profilepage.description %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_profilepage_path(profilepage), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      profilepage_path(profilepage),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Data Table </h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:datasource_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @datatables.each do |datatable| %>
      <tr>
        <td><%= link_to datatable.id, datatable_path(datatable) %></td>
        <td><%= link_to datatable.datasource.name, datatable.datasource %></td>
        <td><%= link_to datatable.name, datatable_path(datatable) %></td>
        <td><%= datatable.location %></td>
        <td><%= datatable.year %></td>
        <td><%= datatable.description %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_datatable_path(datatable), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      datatable_path(datatable),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
