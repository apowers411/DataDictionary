<%= form_for @datatable, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :datasource_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :datasource_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :year, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :year, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :importdetail, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :importdetail, :class => 'text_area' %>
    </div>
  </div>
<div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                datatables_path, :class => 'btn' %>
  </div>
<% end %>
